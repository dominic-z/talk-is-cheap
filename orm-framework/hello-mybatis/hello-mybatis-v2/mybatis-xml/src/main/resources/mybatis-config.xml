<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>


    <!--    用于演示配置文件中的properties用法-->
    <properties resource="jdbc.properties">
        <property name="org.apache.ibatis.parsing.PropertyParser.enable-default-value" value="true"/>
    </properties>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="logImpl" value="LOG4J2"/>
    </settings>

    <typeAliases>
        <package name="org.talk.is.cheap.orm.mybatis.hello.domain"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
<!--            <dataSource type="POOLED">-->
<!--            改为druid提供的连接池-->
            <dataSource type="org.talk.is.cheap.orm.mybatis.hello.config.MyDruidDataSourceFactory">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username:root}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/blog.xml"/>


        <mapper resource="mappers/blogMapper.xml"/>
<!--        下面这个和mappers/blogMapper.xml会报错，namespace需要唯一-->
<!--        <package name="org.talk.is.cheap.orm.mybatis.hello.mappers"/>-->
        <mapper class="org.talk.is.cheap.orm.mybatis.hello.mappers.AuthorMapper"/>
    </mappers>
</configuration>